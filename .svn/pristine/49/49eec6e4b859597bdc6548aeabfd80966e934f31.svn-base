/*格点预报*/
div.latticeForcast{
    background-color: #ffffff;
    z-index: 998;
    width: 1105px;
    height: 100%;
    font-size: 12px;
    font-family: Microsoft YaHei;
    border: 1px solid rgb(175,205,225);
    display: block;
    float:left;
    overflow-y:auto;
    margin-left: 5px;
}
s {
	position: absolute;
}

div.latticePrecipitation{
    background-color: #ffffff;
    width: 1380;
    margin-left: 60px;
    right: 0px;
    bottom: 0px;
    z-index: 999;
    height: 230px;
    font-size: 12px;
    font-family: Microsoft YaHei;
    display: block;
}

.latticeTable{
    width: 100%;
    height: 100%;
    text-align: center;
    font-size: 10px;
    border-left:#DFDFDF solid 1px;
    border-top:#DFDFDF solid 1px;
    border-collapse:collapse;
}

.latticeTable td{
    border-right:#DFDFDF solid 1px;
    border-bottom:#DFDFDF solid 1px;
}

div.latticeInfoTitle{
    width: 100%;
    height: 28px;
    background-image: linear-gradient(to top,rgb(230,239,254) 0,rgb(239,243,254) 100%);
    border-top: 1px solid #DFDFDF ;
    color: rgba(14,44,94,0.2);
    text-align: right;
    margin-right: 2px;
    font-size: 10px;
    line-height: 22px;
}

div.mapTool{
    width: 100%;
    height: 80px;
    background-image: linear-gradient(to top,rgb(230,239,254) 0,rgb(239,243,254) 100%);
    border-top: 1px solid #DFDFDF ;
    color: rgba(14,44,94,0.2);
    text-align: right;
    margin-right: 2px;
    font-size: 10px;
    line-height: 22px;
}

div.latticeInfoTitle span{
    color: rgb(14,44,94);
    margin-left: 3px;
    float: left;
    font-size: 12px;
    font-weight:bold;
}

div.latticeInfoTitle img{
    margin: 3px 0px 0px 4px;
    float: left;
    opacity:0.8;
}

div.latticeInfoBase{
    width: 100%;
    padding: 5px 0px 5px 0px;
    font-size: 11px;
    color: #808080;
}

div.latticeInfoBase span{
    margin-left: 10px;
    color: black;
}

div.latticeTime{
    width: 90%;
    height: 15px;
    border-left: 1px solid #dfdfdf;
    margin: 0px 0px 3px 39px;
    text-align: center;
    color: rgb(102,102,102);
}

div.latticeTime div{
    height: 15px;
    border-right: 1px solid #dfdfdf;
    float: left;
}

.tableFiles{
    height: 100%;
    width: 100%;
    text-align: center;
    font-size: 12px;
    border-collapse:collapse;
    font-family: Microsoft YaHei;
    background-color: #FFFFFF;
    border:rgb(216,216,216) solid 1px;
}

.tableFiles td{
    width: 101px;
    height: 21px;
    border:rgb(200,200,200) solid 1px;
    padding: 0px 1px;
}

/*格点预报1*/
div.displayGridForecast{
    background-color: #ffffff;
    z-index: 998;
    width: 40%;
    height: 100%;
    font-size: 12px;
    font-family: Microsoft YaHei;
    border: 1px solid rgb(175,205,225);
    display: block;
    float:left;
    overflow-y:auto;
    margin-left: 10px;
}

div.displayGridPrecipitation{
    background-color: #ffffff;
    width: 100%;
    right: 0px;
    bottom: 0px;
    z-index: 999;
    height: 230px;
    font-size: 12px;
    font-family: Microsoft YaHei;
    display: block;
}

div.displayGridTime{
    width: 1000px;
    height: 15px;
    border-left: 1px solid #dfdfdf;
    margin: 0px 0px 3px 39px;
    text-align: center;
    color: rgb(102,102,102);
}

.latticeControlHide{
    position: absolute;
    right: 3px;
    margin-top: 4px;
    cursor: pointer;
    width: 17px;
    height: 29px;
    font-size: 16px;
    background-color: rgb(233, 238, 251);
    border: 1px solid rgb(203, 203, 203);
    line-height: 29px;
    border-radius: 3px;
}
.latticeControlShow{
    position: absolute;
    right: 23px;
    margin-top: 2px;
    cursor: pointer;
    width: 17px;
    height: 29px;
    font-size: 16px;
}

div.bottomPanelImg{
    width: 40px;
    height: 14px;
    line-height: 12px;
    position: absolute;
    margin-left: 40%;
    bottom: 2px;
    background-color: #ffffff;
    border: 1px solid #dfdfdf;
    border-bottom-color: #ffffff;
    text-align: center;
    cursor: pointer;
}
.latticeControlShow1{
    position: absolute;
    right: 1021px;
    margin-top: 4px;
    cursor: pointer;
    width: 34px;
    height: 29px;
    font-size: 16px;
}

.bottomPanelShow{
    width: 30px;
    height: 28px;
    line-height: 22px;
    position: absolute;
    left: 85px;
    bottom: 211px;
    text-align: center;
    cursor: pointer;
}
