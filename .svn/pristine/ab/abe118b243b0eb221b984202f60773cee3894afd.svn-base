    <title>山东气象业务一体化平台</title>
	<script type="text/javascript">
        $(function(){ 
			if($.cookie("departCode")!=null&&$.cookie("departCode").length>1){
				$("#span_user")[0].innerHTML =$.cookie("departName")+'-'+$.cookie("showName");
				$("#a_exit")[0].innerHTML = "退出";
			}
			$("#span_user").click(function(){
				if($(this).html() != "未登录"){
					window.location = "personCenter.html";
				}
			});
			$("#a_exit").click(function(){
				if(this.innerHTML == "退出") {
					$("#span_user")[0].innerHTML = "未登录";
					$.cookie('password', '', { expires: -1 });      //如果退出，不记录密码
					$.cookie("rmbUser", 'false', { expire: -1 });   //如果退出，不记录密码
					$.cookie("departCode", '', { expire: -1 });   //如果退出，不记录密码
					this.innerHTML = "登录";
				}
				else if(this.innerHTML == "登录") {
					window.location.href="index.html";
				}
			});
            $("#div_zdqg").click(function(){//天气实况
			    window.location.href="weather.html";
			});
            $("#div_river").click(function(){//山洪预警
                checkLoginAndOpenUrl("SHYJ","river.html");
            });
            $("#div_grid").click(function(){//格点预报
				checkLoginAndOpenUrl("GDYB","grid.html");
                //window.location.href="grid.html";
            });
            $("#div_dlg").click(function(){//短临岗
                window.location.href="dlyb.html";
            });
			$("#div_product").click(function(){//产品发布管理
				checkLoginAndOpenUrl("YBZZ","product.html");
                //window.location.href="product.html";
            }); 
            $("#div_cpzs").click(function(){//产品展示
                window.location.href="display.html";
            });
			$("#div_ybjy").click(function(){//预报检验
				window.location.href="verify.html";
			});
			$("#div_cjwt").click(function(){//常见问题
				window.location.href="upload/gdybfqa.html";
			});
			$("#div_tjllq").click(function(){//推荐浏览器
				window.location.href="upload/Chrome.rar";
			});
			$("#div_ywgl").click(function(){//业务管理
				checkLoginAndOpenUrl("YBYW","../YBYW/index.html");
                //window.location.href="../YBYW/index.html";
			});
            $(".menuDiv").hover(function(){
                var $this = $(this).find("img");
                $this.css("box-shadow","3px 3px 4px 1px #555");
            },function(){
                var $this = $(this).find("img");
                $this.css("box-shadow","");
            }); 
        });
    </script>
</head>
